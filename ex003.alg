algoritmo "Salario_funcionario"


var
    s : Real
    n : caractere


inicio
      EscrevaL("Olá, digite seu nome: ")
      Leia(n)
      EscrevaL("Agora, informe seu salário: ")
      Leia(s)
      Escreva("O funcionário " , n , "tem um sálario de R$", s:4:2 , " em Outubro")


fimalgoritmo
