algoritmo "Parametros"
var
   X, Y : Inteiro

Procedimento Soma(A, B : Inteiro)
Inicio
      A := A + 1
      B := B + 2
      EscrevaL("O valor de A = ", A)
      EscrevaL("O valor de B = ", B)
      EscrevaL("A soma A + B = ", A + B)
FimProcedimento

inicio
      X := 4
      Y := 8
      Soma(X, Y)
      EscrevaL("X = ", X)
      EscrevaL("Y = ", Y)
fimalgoritmo

